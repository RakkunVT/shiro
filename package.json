{
	"name": "@chikof/shiro",
	"version": "1.0.0",
	"description": "Shiro is a collection of games that can be used with a Discord bot",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"scripts": {
		"build": "tsup",
		"format": "biome format",
		"lint": "biome check .",
		"lint:fix": "biome check . --apply-unsafe",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"prepack": "pnpm build",
		"postinstall": "husky install .github/husky"
	},
	"keywords": ["bot", "typescript", "ts", "pnpm"],
	"author": "@chikof",
	"license": "ISC",
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@commitlint/config-conventional": "^18.6.2",
		"@favware/cliff-jumper": "^2.2.3",
		"@favware/npm-deprecate": "^1.0.7",
		"@sapphire/ts-config": "^5.0.0",
		"@types/node": "^20.11.20",
		"biome": "^0.3.3",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.2",
		"tsup": "^7.3.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rakkunvt/shiro.git"
	},
	"files": ["dist/**/*.js*", "dist/**/*.mjs*", "dist/**/*.d*"],
	"engines": {
		"node": ">=v14.0.0",
		"npm": ">=7.0.0"
	},
	"bugs": {
		"url": "https://github.com/rakkunvt/shiro/issues"
	},
	"commitlint": {
		"extends": ["@commitlint/config-conventional"]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": ["biome format", "biome check --apply-unsafe"]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.8"
	}
}
